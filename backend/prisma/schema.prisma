generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Users table
model User{
  id  Int @id @default(autoincrement())
  name String @unique
  email String @unique
  password String
  id_discord_linked Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  //Relations
  tokens Token[]
}

model Token {
  id Int @id @default(autoincrement())
  userId Int @unique
  user User @relation(fields: [userId],references: [id])
  value String
  action String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserSetting {
  id Int @id @default(autoincrement())
  userId Int @unique
  colortheme String
  timezone String

  //Relations
}

model DiscordAuth {
  id Int @id @default(autoincrement())
  userId Int @unique
  discordId String @unique
  discordName String
  accessToken String
  refreshToken String
  expiresAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  //Relations
}

